{
  "manifest_version": 2,
  "name": "Script Blocker",
  "version": "1.0",
  "description": "Block scripts containing specific words",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["blocked-words.json"]
}
